{{> logo active}} 
<form method="POST"  class="play-form">
    <h4>New User Registration</h4>  
    <div id="un_group" class="form-group">
        <label for="user_name">User Name</label>
        <input type="text" class="form-control" name="user_name" id="user_name" aria-describedby="User Name" placeholder="Enter New User Name"minlength="5" maxlength="15">
    </div>
    <div id="pw_group" class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" id="password" placeholder="Password" minlength="8" vmaxlength="100"
    </div>
    <div class="form-group">
        <label for="password_compare">Password</label>
        <input type="password" class="form-control" name="password_compare" id="password_compare" placeholder="Re Enter Password" minlength="8" maxlength="100">
    </div>
    {{#if errors}}
        {{#each errors}}
        <div id="un_alert" class="alert alert-danger" role="alert">
            {{this.msg}}
        </div>
        {{/each}}
    {{/if}}
    <button id="reg_submit" type="submit" class="btn btn-primary">Submit</button>
</form>

